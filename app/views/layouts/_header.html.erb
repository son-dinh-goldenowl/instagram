<header id='header'>
  <div class='row content-header'>
    <div class='col-md-4'>
      <%= image_pack_tag ('logo.png'), id: 'logo' %>
    </div>
    <% if user_signed_in? %>
      <div class='col-md-4'>
        <div class='form-search'>
          <i class='fas fa-search'></i>
          <input type='search' class='form-control'>
        </div>
      </div>
      <div class='col-md-4 link-header'>
        <div class='col-md-2'><%= image_pack_tag ('home.png') %></div>
        <div class='col-md-2'><%= image_pack_tag ('messenger.png') %></div>
        <div class='col-md-2'><%= image_pack_tag ('add.png') %></div>
        <div class='col-md-2'><%= image_pack_tag ('compass.png') %></div>
        <div class='col-md-2'><%= image_pack_tag ('heart.png') %></div>
        <div class='col-md-2 avatar'>
          <ul class='navbar-nav'>
              <li class='nav-item dropdown'>
              <a class='nav-link dropdown-toggle' href='#' id='navbarDropdownMenuLink' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
                <img src='https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg' width='40' height='40' class='rounded-circle'>
              </a>
              <div class='dropdown-menu' aria-labelledby='navbarDropdownMenuLink'>
                <%= link_to I18n.t('user.profile'), user_path(current_user), class: 'dropdown-item' %>
                <a class='dropdown-item' href='#'>Saved</a>
                <%= link_to I18n.t('user.settings'), edit_user_registration_path, class: 'dropdown-item' %>
                <a class='dropdown-item' href='#'>Switch Accounts</a>
                <%= link_to I18n.t('user.logout'), destroy_user_session_path, method: 'delete', class: 'dropdown-item' %>
              </div>
            </li>
          </ul>
      </div>
    <% end %>
  </div>
</header>
