<div class='login'>
  <div class='slide-login' style='background-image: url(<%= asset_pack_url('media/images/phone-homepage.png') %>);'>
    <div class='form-img'>
      <%= image_pack_tag ('slide-1.png'), id: 'slide-img-1', class: 'hide-img' %>
    </div>
    <div class='form-img'>
      <%= image_pack_tag ('slide-2.png'), id: 'slide-img-2', class: 'hide-img' %>
    </div>
    <div class='form-img'>
      <%= image_pack_tag ('slide-3.png'), id: 'slide-img-3', class: 'hide-img' %>
    </div>
    <div class='form-img'>
      <%= image_pack_tag ('slide-4.png'), id: 'slide-img-4', class: 'hide-img' %>
    </div>
  </div>
  <div class='sign-in'>
    <div class='form-sign-up'>
      <%= image_pack_tag ('logo.png') %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='field'>
          <span class='placeholder' id='span_user_email'>Email</span>
          <%= f.email_field :email %>
        </div>
        <div class='field'>
          <span class='placeholder' id='span_user_password'>Password</span>
          <%= f.password_field :password %>
          <span id='show_password'>Show</span>
          <span id='hide_password'>Hide</span>
        </div>
        <div class='actions'>
          <%=  f.button 'Log in', class: 'btn btn-primary' %>
        </div>
        <% if notice.present? %>
          <p class='alert text-succes alert-success font-weight-bolds'><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class='alert text-danger alert-danger font-weight-bold'><%= alert %></p>
        <% end %>
      <% end %>
      <div class='or'>
        <div class='border-secondary'></div>
        <h5>OR</h5>
        <div class='border-secondary'></div>
      </div>
      <button class='btn btn-primary btn-fabebook fb-login'>
        <div class='sns-facebook'>
          <%= image_pack_tag ('facebook-icon.png'), class: 'icon-facebook' %>
          <p class='connect-facebook'>Log in with Facebook</p>
        </div>
      </button>
      <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'forgot-password' %><br />
    </div>
    <div class='form-group'>
      <p>Don't have an account? <%= link_to 'Sign up', new_registration_path(resource_name) %></p>
    </div>

    <%= render 'layouts/get_app'%>
  </div>
</div>
