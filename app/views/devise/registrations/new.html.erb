<div class='sign-up'>
  <div class='form-sign-up'>
    <%= image_pack_tag ('logo.png') %>
    <h2>Sign up to see photos and videos from your friends.</h2>
    <button class="btn btn-primary btn-fabebook">
      <div class='sns-facebook'>
        <%= image_pack_tag ('facebook-icon.png'), class: 'icon-facebook' %>
        <p class="connect-facebook">Log in with Facebook</p>
      </div>
    </button>
    <div class="or">
      <div class="border-secondary"></div>
      <h5>OR</h5>
      <div class="border-secondary"></div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>
      <div class='field'>
        <span class="placeholder" id='span_user_email'>Email</span>
        <%= f.email_field :email %>
      </div>

      <div class='field'>
        <span class="placeholder" id='span_user_fullname'>Fullname</span>
        <%= f.text_field :fullname %>
      </div>

      <div class='field'>
        <span class="placeholder" id='span_user_user_name'>Username</span>
        <%= f.text_field :user_name %>
      </div>

      <div class='field'>
        <span class="placeholder" id='span_user_password'>Password</span>
        <%= f.password_field :password %>
      </div>

      <div class='actions'>
        <%= f.button 'Sign up', class: 'btn btn-primary' %>
      </div>

      <div class='note-sign-up'>
        <h5>By signing up, you agree to our <b>Terms, Data Policy</b> and <b>Cookies Policy</b> .</h5>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <p>Have an account? <%= link_to "Log in", new_session_path(resource_name) %></p>
  </div>

  <%= render 'layouts/get_app'%>
</div>
